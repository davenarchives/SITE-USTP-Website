                                                    <div class="text-xs text-gray-500 mt-0.5 line-clamp-1 truncate max-w-xs md:max-w-md">
                                                        {doc.description}
                                                    </div>
                                                    <div class="mt-2 text-xs text-gray-400 flex items-center gap-2 md:hidden">
                                                        <span class="bg-gray-100 text-gray-600 px-1.5 py-0.5 rounded font-medium">
                                                            {doc.category ||
                                                                "General"}
                                                        </span>
                                                        <span class="bg-gray-100 text-gray-600 px-1.5 py-0.5 rounded font-medium">
                                                            {doc.typeExt}{" "}
                                                            {doc.finalSize}
                                                        </span>
                                                        <span>
                                                            {formatDate(
                                                                doc.date,
                                                            )}
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap hidden md:table-cell">
                                            <span class="bg-slate-100 text-slate-700 font-medium px-3 py-1 rounded-full text-xs border border-slate-200">
                                                {doc.category || "General"}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap hidden md:table-cell">
                                            <div class="flex items-center text-sm text-gray-500">
                                                <span class="bg-gray-100 text-gray-700 font-medium px-2 py-0.5 rounded text-xs mr-2 border border-gray-200">
                                                    {doc.typeExt}
                                                </span>
                                                {doc.finalSize}
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap hidden sm:table-cell">
