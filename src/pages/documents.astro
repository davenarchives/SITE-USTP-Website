import MainLayout from "../layouts/MainLayout.astro";

import { getCollection } from "astro:content";

const fetchFileSize = async (url: string) => {
    try {
        // We use the raw URL to do a HEAD request to get file size headers
        const res = await fetch(url, { method: "HEAD" });
        if (res.ok) {
            const size = res.headers.get("content-length");
            if (size) {
                const bytes = parseInt(size, 10);
                if (bytes < 1024) return bytes + " B";
                else if (bytes < 1048576)
                    return (bytes / 1024).toFixed(1) + " KB";
                else return (bytes / 1048576).toFixed(1) + " MB";
            }
        }
    } catch (e) {
        // Fallback for failed requests directly (or CORS/Auth blocks for PDF)
    }
    return ""; // Fallback gracefully if we can't extract sizes
};

const rawDocuments = await getCollection("documents");

const documents = await Promise.all(
    rawDocuments.map(async (d) => {
        const extMatch = d.data.file?.match(/\.([a-z0-9]+)(?:[\?#]|$)/i);
        const typeExt = extMatch ? extMatch[1].toUpperCase() : "PDF";
        const finalSize = await fetchFileSize(d.data.file);

        return {
            ...d.data,
            typeExt,
            finalSize,
        };
    }),
).then((docs) =>
    docs.sort(
        (a, b) => new Date(b.date).getTime() - new Date(a.date).getTime(),
    ),
);

const formatDate = (dateStr: Date | string) => {
    return new Date(dateStr).toLocaleString("default", {
        month: "short",
        day: "numeric",
        year: "numeric",
    });
};

const getDownloadUrl = (url: string) => {
    if (url && url.includes("cloudinary.com") && url.includes("/upload/")) {
        // Inject fl_attachment to force Cloudinary to send Content-Disposition: attachment
        return url.replace("/upload/", "/upload/fl_attachment/");
    }
    return url;
};
