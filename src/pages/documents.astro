<script>
    document.addEventListener("DOMContentLoaded", () => {
        // ── Modal ──────────────────────────────────────────────────────────
        const modal = document.getElementById("doc-modal");
        const backdrop = document.getElementById("doc-modal-backdrop");
        const closeBtn = document.getElementById("doc-modal-close");
        const iframe = document.getElementById(
            "doc-modal-iframe",
        ) as HTMLIFrameElement;
        const newTabBtn = document.getElementById(
            "doc-modal-new-tab",
        ) as HTMLAnchorElement;
        const loader = document.getElementById("doc-modal-loader");
        const viewBtns = document.querySelectorAll(".view-doc-btn");

        const openModal = (url: string) => {
            if (!modal || !iframe || !newTabBtn || !loader) return;
            iframe.src = url;
            newTabBtn.href = url;
            loader.style.display = "flex";
            modal.classList.remove("hidden");
            document.body.style.overflow = "hidden";
            iframe.onload = () => {
                loader.style.display = "none";
            };
        };
        const closeModal = () => {
            if (!modal || !iframe) return;
            modal.classList.add("hidden");
            document.body.style.overflow = "";
            iframe.src = "";
        };
        viewBtns.forEach((btn) => {
            btn.addEventListener("click", () => {
                const url = btn.getAttribute("data-doc-url");
                if (url) openModal(url);
            });
        });
        closeBtn?.addEventListener("click", closeModal);
        backdrop?.addEventListener("click", closeModal);
        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape" && !modal?.classList.contains("hidden"))
                closeModal();
        });

        // ── Search + Filter + Pagination ───────────────────────────────────
        const allRows = Array.from(
            document.querySelectorAll<HTMLTableRowElement>(".document-row"),
        );
        const searchInput = document.getElementById(
            "doc-search",
        ) as HTMLInputElement;
        const catSelect = document.getElementById(
            "doc-filter-category",
        ) as HTMLSelectElement;
        const yearSelect = document.getElementById(
            "doc-filter-year",
        ) as HTMLSelectElement;
        const perPageSelect = document.getElementById(
            "per-page-select",
        ) as HTMLSelectElement | null;
        const visibleCount = document.getElementById("doc-visible-count");
        const infoText = document.getElementById("pagination-info");
        const prevBtn = document.querySelectorAll(
            'nav[aria-label="Pagination"] button',
        )[0] as HTMLButtonElement;
        const nextBtn = document.querySelectorAll(
            'nav[aria-label="Pagination"] button',
        )[2] as HTMLButtonElement;
        const pageNumDisplay = document.querySelectorAll(
            'nav[aria-label="Pagination"] button',
        )[1] as HTMLButtonElement;

        let currentPage = 1;
        let itemsPerPage = parseInt(perPageSelect?.value ?? "10") || 10;
        let filteredRows: HTMLTableRowElement[] = allRows;

        function applyFilters() {
            const q = searchInput?.value.toLowerCase().trim() ?? "";
            const cat = catSelect?.value.toLowerCase() ?? "";
            const year = yearSelect?.value ?? "";

            filteredRows = allRows.filter((row) => {
                const title = row.getAttribute("data-title") ?? "";
                const desc = row.getAttribute("data-description") ?? "";
                const rowCat = row.getAttribute("data-category") ?? "";
                const rowYear = row.getAttribute("data-year") ?? "";

                const matchQ = !q || title.includes(q) || desc.includes(q);
                const matchCat = !cat || rowCat === cat;
                const matchYear = !year || rowYear === year;
                return matchQ && matchCat && matchYear;
            });

            // Hide all first
            allRows.forEach((r) => {
                r.style.display = "none";
            });

            currentPage = 1;
            renderPage();
        }

        function renderPage() {
            const total = filteredRows.length;
            const totalPages = Math.max(1, Math.ceil(total / itemsPerPage));
            if (currentPage > totalPages) currentPage = totalPages;

            const start = (currentPage - 1) * itemsPerPage;
            const end = Math.min(start + itemsPerPage, total);

            allRows.forEach((r) => {
                r.style.display = "none";
            });
            filteredRows.slice(start, end).forEach((r) => {
                r.style.display = "";
            });

            if (visibleCount) visibleCount.textContent = String(total);
            if (infoText) {
                infoText.textContent =
                    total === 0
                        ? "Showing 0 to 0 of 0 items"
                        : `Showing ${start + 1} to ${end} of ${total} items`;
            }
            if (pageNumDisplay)
                pageNumDisplay.textContent = String(currentPage);
        }

        searchInput?.addEventListener("input", () => applyFilters());
        catSelect?.addEventListener("change", () => applyFilters());
        yearSelect?.addEventListener("change", () => applyFilters());

        perPageSelect?.addEventListener("change", (e: Event) => {
            itemsPerPage = parseInt((e.target as HTMLSelectElement).value);
            currentPage = 1;
            renderPage();
        });
        prevBtn?.addEventListener("click", () => {
            if (currentPage > 1) {
                currentPage--;
                renderPage();
            }
        });
        nextBtn?.addEventListener("click", () => {
            const totalPages = Math.max(
                1,
                Math.ceil(filteredRows.length / itemsPerPage),
            );
            if (currentPage < totalPages) {
                currentPage++;
                renderPage();
            }
        });

        // Initial render
        applyFilters();
    });
</script>
