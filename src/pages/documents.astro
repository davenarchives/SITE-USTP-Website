                >
                    <div class="flex items-center text-sm text-gray-500">
                        <span class="mr-2">Show</span>
                        <select
                            class="border border-gray-300 rounded-md text-gray-500 text-sm py-1 px-2 pr-6 focus:ring-blue-500 focus:border-blue-500"
                        >
                            <option>10</option>
                            <option>20</option>
                            <option>50</option>
                        </select>
                        <span class="ml-2">per page</span>
                        <span class="ml-4 break-words" id="pagination-info"
                            >Showing 1 to 10 of 10 items</span
                        >
                    </div>

                    <div>
                        <nav
                            class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px"
                            aria-label="Pagination"
                        >
                            <button
                                class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
                            >
                                <span class="sr-only">Previous</span>
                                <svg
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 19l-7-7 7-7"></path>
                                </svg>
                            </button>
                            <button
                                class="relative inline-flex items-center px-4 py-2 border border-blue-500 bg-blue-600 text-sm font-medium text-white hover:bg-blue-700"
                            >
                                1
                            </button>
                            <button
                                class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
                            >
                                <span class="sr-only">Next</span>
                                <svg
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 5l7 7-7 7"></path>
                                </svg>
                            </button>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Document Preview Modal -->
    <div id="doc-modal" class="fixed inset-0 z-[100] hidden">
        <!-- Backdrop -->
        <div
            id="doc-modal-backdrop"
            class="absolute inset-0 bg-gray-900/60 backdrop-blur-sm transition-opacity"
        >
        </div>

        <!-- Modal Content -->
        <div
            class="absolute inset-0 flex items-center justify-center p-4 sm:p-6 md:p-12"
        >
            <div
                class="bg-white rounded-xl shadow-2xl w-full h-full max-w-6xl flex flex-col overflow-hidden relative z-10 transform transition-all flex flex-col"
            >
                <!-- Header -->
                <div
                    class="px-6 py-4 flex items-center justify-between border-b border-gray-200 bg-white"
                >
                    <h3 class="text-xl font-bold text-gray-900">
                        Document Preview
                    </h3>
                    <div class="flex items-center gap-3">
                        <a
                            id="doc-modal-new-tab"
                            href="#"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-sm font-medium text-blue-600 hover:text-blue-700 bg-blue-50 hover:bg-blue-100 px-4 py-2 rounded-lg transition-colors"
                        >
                            Open in New Tab
                        </a>
                        <button
                            id="doc-modal-close"
                            class="text-gray-400 hover:text-gray-600 p-2 rounded-lg hover:bg-gray-100 transition-colors"
                        >
                            <span class="sr-only">Close</span>
                            <svg
                                class="w-6 h-6"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>
                <!-- Iframe Container -->
                <div class="flex-1 w-full bg-gray-100 relative">
                    <!-- Loading Spinner Overlay (Shows until iframe loads) -->
                    <div
                        id="doc-modal-loader"
                        class="absolute inset-0 flex items-center justify-center bg-gray-100/80 z-10"
                    >
                        <svg
                            class="animate-spin h-8 w-8 text-blue-600"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                        >
                            <circle
                                class="opacity-25"
                                cx="12"
                                cy="12"
                                r="10"
                                stroke="currentColor"
                                stroke-width="4"></circle>
                            <path
                                class="opacity-75"
                                fill="currentColor"
                                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                            ></path>
                        </svg>
                    </div>
                    <!-- The iframe -->
                    <iframe
                        id="doc-modal-iframe"
                        class="w-full h-full border-0"
                        title="Document Preview"></iframe>
                </div>
            </div>
        </div>
    </div>
</MainLayout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Modal logic
        const modal = document.getElementById("doc-modal");
        const backdrop = document.getElementById("doc-modal-backdrop");
        const closeBtn = document.getElementById("doc-modal-close");
        const iframe = document.getElementById(
            "doc-modal-iframe",
        ) as HTMLIFrameElement;
        const newTabBtn = document.getElementById(
            "doc-modal-new-tab",
        ) as HTMLAnchorElement;
        const loader = document.getElementById("doc-modal-loader");
        const viewButtons = document.querySelectorAll(".view-doc-btn");

        const openModal = (url: string) => {
            if (!modal || !iframe || !newTabBtn || !loader) return;
            iframe.src = url;
            newTabBtn.href = url;
            loader.style.display = "flex";
            modal.classList.remove("hidden");
            document.body.style.overflow = "hidden";
            iframe.onload = () => {
                loader.style.display = "none";
            };
        };

        const closeModal = () => {
            if (!modal || !iframe) return;
            modal.classList.add("hidden");
            document.body.style.overflow = "";
            iframe.src = "";
        };

        viewButtons.forEach((btn) => {
            btn.addEventListener("click", () => {
                const url = btn.getAttribute("data-doc-url");
                if (url) openModal(url);
            });
        });

        closeBtn?.addEventListener("click", closeModal);
        backdrop?.addEventListener("click", closeModal);
        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape" && !modal?.classList.contains("hidden"))
                closeModal();
        });

        // Pagination logic
        const rows = document.querySelectorAll(
            ".document-row",
        ) as NodeListOf<HTMLElement>;
        const perPageSelect = document.querySelector(
            "select",
        ) as HTMLSelectElement;
        const infoText = document.getElementById("pagination-info");
        const prevBtn =
            (document.querySelector('button[aria-label="Pagination"]')
                ?.previousElementSibling as HTMLButtonElement) ||
            document.querySelectorAll('nav[aria-label="Pagination"] button')[0];
        const nextBtn = document.querySelectorAll(
            'nav[aria-label="Pagination"] button',
        )[2] as HTMLButtonElement;
        const pageNumDisplay = document.querySelectorAll(
            'nav[aria-label="Pagination"] button',
        )[1] as HTMLButtonElement;

        let currentPage = 1;
        let itemsPerPage = parseInt(perPageSelect?.value || "10");

        function updateTable() {
            const totalItems = rows.length;
            const totalPages = Math.ceil(totalItems / itemsPerPage);

            if (currentPage > totalPages) currentPage = Math.max(1, totalPages);

            const start = (currentPage - 1) * itemsPerPage;
            const end = Math.min(start + itemsPerPage, totalItems);

            rows.forEach((row, index) => {
                if (index >= start && index < end) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });

            if (infoText) {
                infoText.textContent =
                    totalItems === 0
                        ? "Showing 0 to 0 of 0 items"
                        : `Showing ${start + 1} to ${end} of ${totalItems} items`;
            }

            if (pageNumDisplay)
                pageNumDisplay.textContent = currentPage.toString();
        }

        perPageSelect?.addEventListener("change", (e) => {
            itemsPerPage = parseInt((e.target as HTMLSelectElement).value);
            currentPage = 1;
            updateTable();
        });

        prevBtn?.addEventListener("click", () => {
            if (currentPage > 1) {
                currentPage--;
                updateTable();
            }
        });

        nextBtn?.addEventListener("click", () => {
            const totalPages = Math.ceil(rows.length / itemsPerPage);
            if (currentPage < totalPages) {
                currentPage++;
                updateTable();
            }
        });

        updateTable();
    });
</script>
