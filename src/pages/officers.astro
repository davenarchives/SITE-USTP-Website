---
import MainLayout from "../layouts/MainLayout.astro";
import officersData from "../data/officers.json";
import { db } from "../lib/firebase";
import { doc, getDoc } from "firebase/firestore";
import { getOptimizedImage } from "../lib/cloudinary";

const { academicYear, departments } = officersData;

let officerProfilePictures: any = {};
try {
    const docRef = doc(db, "settings", "officerProfilePictures");
    const docSnap = await getDoc(docRef);
    if (docSnap.exists()) {
        officerProfilePictures = docSnap.data();
    }
} catch (e) {
    console.error("Failed to fetch officer pictures:", e);
}
---

<MainLayout title="Our Team | SITE">
    <div class="bg-gray-50 min-h-screen py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Header -->
            <div class="text-center mb-12">
                <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                    Meet the Team
                </h1>
                <p class="mt-4 text-xl text-gray-500">
                    The dedicated students behind SITE.
                </p>
                <div class="mt-4 inline-flex items-center gap-2 bg-blue-50 border border-blue-100 rounded-full px-4 py-2">
                    <span class="text-blue-700 font-semibold">Academic Year {academicYear}</span>
                </div>

                <!-- Search Input -->
                <div class="mt-8 max-w-xl mx-auto">
                    <label for="searchOfficerPublic" class="sr-only">Search officers</label>
                    <div class="relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                             <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                              </svg>
                        </div>
                        <input
                            type="text"
                            id="searchOfficerPublic"
                            placeholder="Search for an officer..."
                            class="focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 sm:text-sm border-gray-300 rounded-md bg-gray-50 p-3"
                        />
                    </div>
                </div>
            </div>

            <!-- Departments -->
            <div class="space-y-16" id="departmentsContainer">
                {departments.map((department) => (
                    <section class="dept-section">
                        <!-- Department Header -->
                        <div class="flex items-center gap-3 mb-8">
                            <span class="text-3xl">{department.emoji}</span>
                            <h2 class="text-2xl md:text-3xl font-bold text-slate-900">
                                {department.name}
                            </h2>
                            <div class="flex-1 h-px bg-gradient-to-r from-slate-200 to-transparent ml-4"></div>
                        </div>

                        <!-- Officers Grid -->
                        <div class="grid grid-cols-3 sm:grid-cols-3 lg:grid-cols-4 gap-2 sm:gap-6">
                            {department.members.map((member) => (
                                <div 
                                    class="officer-card group bg-white rounded-xl border border-slate-200 overflow-hidden hover:border-blue-300 hover:shadow-lg hover:shadow-blue-500/10 transition-all duration-300"
                                    data-name={member.name}
                                    data-position={member.position}
                                >
                                    <!-- Image Display -->
                                    <div class="aspect-square w-full bg-slate-100 relative overflow-hidden group">
                                        {officerProfilePictures[member.name] ? (
                                            <img 
                                                src={getOptimizedImage(officerProfilePictures[member.name])} 
                                                alt={member.name} 
                                                loading="lazy"
                                                decoding="async"
                                                class="h-full w-full object-cover object-top group-hover:scale-105 transition-transform duration-500"
                                            />
                                        ) : (
                                            <div class="flex items-center justify-center h-full text-slate-300 group-hover:text-slate-400 transition-colors">
                                                <svg class="h-20 w-20" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                                                </svg>
                                            </div>
                                        )}
                                        <!-- Hover Overlay -->
                                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                    </div>
                                    
                                    <!-- Officer Info -->
                                    <div class="p-2 sm:p-5">
                                        <h3 class="text-xs sm:text-lg font-bold text-slate-900 group-hover:text-blue-600 transition-colors break-words leading-tight" title={member.name}>
                                            {member.name}
                                        </h3>
                                        <p class="text-[10px] sm:text-sm font-medium text-blue-600 mt-0.5 sm:mt-1 leading-tight" title={member.position}>
                                            {member.position}
                                        </p>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </section>
                ))}
            </div>
        </div>
    </div>
</MainLayout>

<script>
    const searchInput = document.getElementById("searchOfficerPublic");
    
    if (searchInput) {
        searchInput.addEventListener("input", (e) => {
            const searchTerm = (e.target as HTMLInputElement).value.toLowerCase().trim();
            const officerCards = document.querySelectorAll(".officer-card");
            const deptSections = document.querySelectorAll(".dept-section");

            // Filter individual cards
            officerCards.forEach((card) => {
                const name = card.getAttribute("data-name")?.toLowerCase() || "";
                const position = card.getAttribute("data-position")?.toLowerCase() || "";
                
                if (name.includes(searchTerm) || position.includes(searchTerm)) {
                    card.classList.remove("hidden");
                } else {
                    card.classList.add("hidden");
                }
            });

            // Hide empty sections
            deptSections.forEach((section) => {
                const visibleCards = section.querySelectorAll(".officer-card:not(.hidden)");
                if (visibleCards.length === 0) {
                    section.classList.add("hidden");
                } else {
                    section.classList.remove("hidden");
                }
            });
        });
    }
</script>
