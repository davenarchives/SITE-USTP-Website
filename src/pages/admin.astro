---
import MainLayout from "../layouts/MainLayout.astro";
import OfficerPictureManager from "../components/OfficerPictureManager.astro";

const isAuthenticated = Astro.cookies.has("site_admin_access");
---

<MainLayout title={isAuthenticated ? "Officer Picture Manager" : "Admin Login"}>
  {
    isAuthenticated ? (
      <div class="w-full flex flex-col min-h-screen pt-4">
        <div class="px-4 mb-4 flex space-x-4 border-b">
          <button
            id="tab-profile"
            class="py-2 px-4 border-b-2 border-blue-500 font-medium text-blue-600"
          >
            Officer Profiles
          </button>
          <button
            id="tab-cms"
            class="py-2 px-4 border-b-2 border-transparent font-medium text-gray-500 hover:text-gray-700"
          >
            Content Manager
          </button>
        </div>

        <div id="content-profile" class="flex-1 block">
          <OfficerPictureManager />
        </div>

        <div id="content-cms" class="flex-1 hidden">
          <iframe
            src="/tina/index.html"
            class="w-full h-[80vh] border-0 rounded-lg shadow-sm"
          />
        </div>
      </div>
    ) : (
      <div class="flex items-center justify-center min-h-[60vh] px-4">
        <div class="w-full max-w-md p-8 space-y-6 bg-white rounded-lg shadow-lg border border-gray-100">
          <div class="text-center">
            <h1 class="text-2xl font-bold text-gray-900">Admin Login</h1>
            <p class="mt-2 text-sm text-gray-600">
              Please sign in with your authorized Google account
            </p>
          </div>

          <div class="mt-8 space-y-6">
            <button
              id="googleSignInHelpers"
              class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
            >
              <svg class="h-5 w-5 mr-2" viewBox="0 0 24 24">
                <path
                  d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                  fill="#4285F4"
                />
                <path
                  d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                  fill="#34A853"
                />
                <path
                  d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                  fill="#FBBC05"
                />
                <path
                  d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                  fill="#EA4335"
                />
              </svg>
              Sign in with Google
            </button>
          </div>

          <div id="errorMessage" class="hidden rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg
                  class="h-5 w-5 text-red-400"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Access Denied</h3>
                <div class="mt-2 text-sm text-red-700">
                  <p id="errorText">
                    You are not authorized to access this page.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    )
  }
</MainLayout>

<script>
  import { auth, googleProvider } from "../lib/firebase";
  import { signInWithPopup, signOut } from "firebase/auth";

  const googleSignInButton = document.getElementById("googleSignInHelpers");
  const errorMessage = document.getElementById("errorMessage");
  const errorText = document.getElementById("errorText");

  if (googleSignInButton) {
    googleSignInButton.addEventListener("click", async () => {
      try {
        // Hide error
        if (errorMessage) errorMessage.classList.add("hidden");

        const result = await signInWithPopup(auth, googleProvider);
        const user = result.user;

        if (user && user.email) {
          // Send email to server for verification
          const response = await fetch("/api/auth/login", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ email: user.email }),
          });

          if (response.ok) {
            console.log("Authorized access:", user.email);
            // Store simple auth flag/token for UI consistency (optional)
            localStorage.setItem("isAdmin", "true");
            localStorage.setItem("adminEmail", user.email);

            // Reload to show the admin interface (Cookie is now set by server)
            window.location.reload();
          } else {
            console.error(
              "Login response not ok:",
              response.status,
              response.statusText,
            );
            const errorData = await response.json().catch(() => ({}));
            throw new Error(errorData.error || "Unauthorized");
          }
        } else {
          throw new Error("No user email found");
        }
      } catch (error: any) {
        console.warn("Login/Auth error:", error);

        // Cleanup if failed
        await signOut(auth);
        localStorage.removeItem("isAdmin");
        localStorage.removeItem("adminEmail");

        if (errorMessage && errorText) {
          if (error.message === "Unauthorized") {
            errorText.textContent = `You are not authorized to access this page.`;
          } else {
            errorText.textContent =
              "An error occurred during sign in. Please try again.";
          }
          errorMessage.classList.remove("hidden");
        }
      }
    });
  }

  // Tab Switching Logic
  const tabProfile = document.getElementById("tab-profile");
  const tabCms = document.getElementById("tab-cms");
  const contentProfile = document.getElementById("content-profile");
  const contentCms = document.getElementById("content-cms");

  if (tabProfile && tabCms && contentProfile && contentCms) {
    tabProfile.addEventListener("click", () => {
      // Show profile, hide CMS
      contentProfile.classList.remove("hidden");
      contentProfile.classList.add("block");
      contentCms.classList.add("hidden");
      contentCms.classList.remove("block");

      // Update active states
      tabProfile.classList.add("border-blue-500", "text-blue-600");
      tabProfile.classList.remove("border-transparent", "text-gray-500");
      tabCms.classList.add("border-transparent", "text-gray-500");
      tabCms.classList.remove("border-blue-500", "text-blue-600");
    });

    tabCms.addEventListener("click", () => {
      // Show CMS, hide profile
      contentCms.classList.remove("hidden");
      contentCms.classList.add("block");
      contentProfile.classList.add("hidden");
      contentProfile.classList.remove("block");

      // Update active states
      tabCms.classList.add("border-blue-500", "text-blue-600");
      tabCms.classList.remove("border-transparent", "text-gray-500");
      tabProfile.classList.add("border-transparent", "text-gray-500");
      tabProfile.classList.remove("border-blue-500", "text-blue-600");
    });
  }
</script>
