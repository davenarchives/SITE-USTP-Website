---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import SDGCard from "../components/SDGCard.astro";
import ResourceGrid from "../components/ResourceGrid.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import foundingTitansImg from "../assets/founding-titans.jpg";
import siteMembersImg from "../assets/site-members.jpg";

// Fetch and prepare data
const events = await getCollection("events");
events.sort(
    (a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
);
const upcomingEvents = events.slice(0, 4);

const posts = await getCollection("news");
posts.sort(
    (a, b) =>
        new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf(),
);
const recentNews = posts.slice(0, 4);

// Fetch resources
const allResources = await getCollection("resources");
const recentResources = allResources.slice(0, 4);

// Fetch documents
const allDocuments = await getCollection("documents");
allDocuments.sort(
    (a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
);
const catColors: Record<string, { bar: string; badge: string; icon: string }> =
    {
        Procurement: {
            bar: "bg-violet-500",
            badge: "bg-violet-50 text-violet-700 border-violet-200",
            icon: "text-violet-400",
        },
        Financial: {
            bar: "bg-emerald-500",
            badge: "bg-emerald-50 text-emerald-700 border-emerald-200",
            icon: "text-emerald-400",
        },
        Minutes: {
            bar: "bg-amber-500",
            badge: "bg-amber-50 text-amber-700 border-amber-200",
            icon: "text-amber-400",
        },
        Resolution: {
            bar: "bg-rose-500",
            badge: "bg-rose-50 text-rose-700 border-rose-200",
            icon: "text-rose-400",
        },
        General: {
            bar: "bg-sky-500",
            badge: "bg-sky-50 text-sky-700 border-sky-200",
            icon: "text-sky-400",
        },
    };
const defaultColor = {
    bar: "bg-blue-500",
    badge: "bg-blue-50 text-blue-700 border-blue-200",
    icon: "text-blue-400",
};

const recentDocuments = allDocuments.slice(0, 4).map((d) => {
    const extMatch = d.data.file?.match(/\.([a-z0-9]+)(?:[\?#]|$)/i);
    const typeExt = extMatch ? extMatch[1].toUpperCase() : "PDF";
    const color = catColors[d.data.category ?? ""] ?? defaultColor;
    const downloadUrl =
        d.data.file?.includes("cloudinary.com") &&
        d.data.file?.includes("/upload/")
            ? d.data.file.replace("/upload/", "/upload/fl_attachment/")
            : d.data.file;
    const dateLabel = new Date(d.data.date).toLocaleString("default", {
        month: "short",
        day: "numeric",
        year: "numeric",
    });
    return { ...d.data, typeExt, color, downloadUrl, dateLabel };
});

const formatDateNumber = (date: Date | string) => {
    return new Date(date).getDate().toString();
};

const formatMonthName = (date: Date | string) => {
    return new Date(date).toLocaleString("default", { month: "short" });
};
---

<MainLayout>
    <Hero />

    <!-- About & SDGs Bento Section -->
    <section class="py-12 md:py-16 bg-[#fafafa]">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 md:auto-rows-[180px]"
            >
                <!-- Who Are We (Span 2x2) -->
                <div
                    class="col-span-2 md:col-span-2 md:row-span-2 bg-white rounded-[2rem] p-6 sm:p-8 shadow-sm flex flex-col border border-gray-100 overflow-hidden"
                >
                    <div
                        class="w-fit px-3 py-1.5 rounded-full bg-[#e8f0fe] text-blue-600 font-bold text-xs mb-4 sm:mb-6 flex items-center gap-2 shrink-0"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"
                            ></path></svg
                        >
                        Who We Are
                    </div>
                    <div class="flex-1 min-h-0 flex flex-col justify-center">
                        <h2
                            class="text-4xl sm:text-[3.25rem] font-bold text-[#111827] mb-3 sm:mb-4 tracking-tight leading-[1.05]"
                        >
                            Empowering <br class="hidden sm:block" /><span
                                class="text-[#2563eb]">IT Professionals</span
                            >
                        </h2>
                        <p
                            class="text-[#4b5563] text-sm sm:text-base leading-relaxed max-w-lg font-medium"
                        >
                            A passionate community uplifting society and solving
                            problems through science, technology, and
                            innovation.
                        </p>
                    </div>
                    <div class="mt-4 sm:mt-6 shrink-0">
                        <a
                            href="/about"
                            class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-sm font-bold rounded-full text-white bg-[#0f172a] hover:bg-[#1e293b] transition-colors shadow-sm"
                        >
                            More About Us &rarr;
                        </a>
                    </div>
                </div>

                <!-- SDG Commitment Card (Blue, Span 2x1) -->
                <div
                    class="col-span-2 md:col-span-2 md:row-span-1 bg-gradient-to-r from-blue-500 to-blue-700 rounded-[2rem] p-6 shadow-sm flex flex-col justify-center relative overflow-hidden"
                >
                    <div
                        class="flex flex-col sm:flex-row sm:items-center justify-between mb-3 md:mb-4 relative z-10 gap-3 px-2"
                    >
                        <div
                            class="w-fit px-3 py-1 rounded-full bg-white/20 text-white font-bold text-xs uppercase tracking-wider backdrop-blur-md"
                        >
                            Our Commitment
                        </div>
                        <h3
                            class="text-white font-bold text-lg hidden sm:block"
                        >
                            SDGs
                        </h3>
                    </div>
                    <div
                        class="relative z-10 flex flex-col justify-center h-full"
                    >
                        <div
                            class="grid grid-cols-5 gap-2 md:gap-3 w-full px-2"
                        >
                            {
                                [12, 9, 10, 4, 8].map((num) => (
                                    <div class="rounded-xl overflow-hidden shadow-sm aspect-square relative group hover:-translate-y-1 transition-transform duration-300">
                                        <img
                                            src={`https://sdgs.un.org/sites/default/files/goals/E_SDG_Icons-${num < 10 ? "0" + num : num}.jpg`}
                                            alt={`SDG ${num}`}
                                            class="w-full h-full object-cover absolute inset-0"
                                        />
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <!-- Mission (Span 1x1, Yellow) -->
                <div
                    class="col-span-1 md:col-span-1 md:row-span-1 bg-[#fbbf24] rounded-[2rem] p-4 sm:p-6 shadow-sm flex flex-col items-center justify-center text-center relative overflow-hidden group aspect-square md:aspect-auto"
                >
                    <h3
                        class="text-3xl sm:text-4xl lg:text-5xl font-black text-gray-900 mb-2 relative z-10"
                    >
                        Mission
                    </h3>
                    <p
                        class="text-gray-800 text-[9px] sm:text-[10px] font-bold uppercase tracking-widest relative z-10 flex border-t border-gray-900/10 pt-2"
                    >
                        Empower IT Students
                    </p>
                </div>

                <!-- Vision (Span 1x1, Dark) -->
                <div
                    class="col-span-1 md:col-span-1 md:row-span-1 bg-[#0f172a] rounded-[2rem] p-4 sm:p-6 shadow-sm flex flex-col items-center justify-center text-center relative overflow-hidden group aspect-square md:aspect-auto"
                >
                    <h3
                        class="text-3xl sm:text-4xl lg:text-5xl font-black text-white mb-2 relative z-10"
                    >
                        Vision
                    </h3>
                    <p
                        class="text-gray-400 text-[9px] sm:text-[10px] font-bold uppercase tracking-widest relative z-10 flex border-t border-white/10 pt-2"
                    >
                        Premier IT Leaders
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Content Feeds Section -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Upcoming Events Row -->
            <div class="mb-16">
                <div
                    class="flex flex-row justify-between items-center md:items-end mb-6 sm:mb-8"
                >
                    <h3
                        class="text-xl sm:text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-1 sm:pb-2 inline-block mb-0"
                    >
                        Events
                    </h3>
                    <a
                        href="/events"
                        class="text-sm sm:text-base text-blue-600 hover:text-blue-800 font-medium whitespace-nowrap"
                        >View all events &rarr;</a
                    >
                </div>

                <div
                    class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-8"
                >
                    {
                        upcomingEvents.map((event, index) => (
                            <a
                                href={`/events/${event.id}/`}
                                class="group bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden flex flex-col hover:shadow-lg transition-all duration-300 h-full"
                            >
                                <div class="relative w-full aspect-video overflow-hidden bg-gray-100 flex-shrink-0">
                                    {event.data.heroImage ? (
                                        <img
                                            src={event.data.heroImage}
                                            alt={event.data.title}
                                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center bg-gray-800 text-white transition-transform duration-500 group-hover:scale-105">
                                            <svg
                                                class="w-12 h-12 opacity-50"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="1.5"
                                                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                                                />
                                            </svg>
                                        </div>
                                    )}

                                    <div class="absolute top-3 left-3 bg-white/95 backdrop-blur-sm rounded-xl shadow-sm border border-gray-100 px-3 py-1.5 flex flex-col items-center justify-center min-w-[3.5rem]">
                                        <span class="text-xl sm:text-2xl font-black text-gray-900 leading-none mb-0.5">
                                            {formatDateNumber(event.data.date)}
                                        </span>
                                        <span class="text-[0.65rem] sm:text-xs font-bold text-gray-500 uppercase tracking-widest leading-none">
                                            {formatMonthName(event.data.date)}
                                        </span>
                                    </div>
                                </div>

                                <div class="p-4 sm:p-5 flex flex-col flex-1">
                                    <h4 class="text-base sm:text-lg font-bold text-gray-900 mb-3 line-clamp-2 leading-tight group-hover:text-blue-600 transition-colors uppercase">
                                        {event.data.title}
                                    </h4>

                                    <div class="text-xs sm:text-sm text-gray-600 line-clamp-2 mt-auto">
                                        {event.body
                                            ? event.body.substring(0, 120) +
                                              (event.body.length > 120
                                                  ? "..."
                                                  : "")
                                            : event.data.location}
                                    </div>
                                </div>
                            </a>
                        ))
                    }
                </div>
            </div>

            <!-- News / Blog Row -->
            <div>
                <div
                    class="flex flex-row justify-between items-center md:items-end mb-6 sm:mb-8"
                >
                    <h3
                        class="text-xl sm:text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-1 sm:pb-2 inline-block mb-0"
                    >
                        News
                    </h3>
                    <a
                        href="/news"
                        class="text-sm sm:text-base text-blue-600 hover:text-blue-800 font-medium whitespace-nowrap"
                        >View all news &rarr;</a
                    >
                </div>

                <div
                    class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-8"
                >
                    {
                        recentNews.map((post) => (
                            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden flex flex-col hover:shadow-md transition-shadow h-full">
                                <div class="h-24 sm:h-48 overflow-hidden bg-gray-100 flex-shrink-0">
                                    {post.data.heroImage ? (
                                        <img
                                            src={post.data.heroImage}
                                            alt={post.data.title}
                                            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center text-gray-400">
                                            <svg
                                                class="w-12 h-12"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="1.5"
                                                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                                                />
                                            </svg>
                                        </div>
                                    )}
                                </div>
                                <div class="p-3 sm:p-5 flex flex-col flex-1">
                                    <p class="text-xs font-medium text-blue-600 mb-1">
                                        {post.data.tags && post.data.tags[0]
                                            ? post.data.tags[0]
                                            : "News"}
                                    </p>
                                    <h4 class="text-sm sm:text-lg font-bold text-gray-900 mb-3 sm:mb-4 line-clamp-2 leading-tight min-h-[2.5em]">
                                        {post.data.title}
                                    </h4>
                                    <div class="mt-auto">
                                        <a
                                            href={`/news/${post.id}`}
                                            class="text-xs sm:text-sm text-blue-600 font-semibold hover:underline"
                                        >
                                            Read article &rarr;
                                        </a>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Documents Row -->
            <div class="mt-16">
                <div
                    class="flex flex-row justify-between items-center md:items-end mb-6 sm:mb-8"
                >
                    <h3
                        class="text-xl sm:text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-1 sm:pb-2 inline-block mb-0"
                    >
                        Documents
                    </h3>
                    <a
                        href="/documents"
                        class="text-sm sm:text-base text-blue-600 hover:text-blue-800 font-medium whitespace-nowrap"
                        >View all documents &rarr;</a
                    >
                </div>

                {
                    recentDocuments.length === 0 ? (
                        <div class="bg-white rounded-xl border border-gray-200 py-12 text-center text-gray-400">
                            <svg
                                class="w-12 h-12 mx-auto mb-3 opacity-40"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                />
                            </svg>
                            <p class="text-sm font-medium">
                                No documents available yet.
                            </p>
                        </div>
                    ) : (
                        <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-8">
                            {recentDocuments.map((doc) => (
                                <div class="group bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden flex flex-col hover:shadow-lg transition-all duration-300 h-full">
                                    {/* Colored top accent bar */}
                                    <div
                                        class={`h-1.5 w-full flex-shrink-0 ${doc.color.bar}`}
                                    />

                                    {/* Header: icon + file type badge */}
                                    <div class="flex items-start justify-between px-4 sm:px-5 pt-4 sm:pt-5 pb-2 flex-shrink-0">
                                        <div
                                            class={`w-10 h-10 sm:w-12 sm:h-12 rounded-xl flex items-center justify-center ${doc.color.badge}`}
                                        >
                                            <svg
                                                class={`w-5 h-5 sm:w-6 sm:h-6 ${doc.color.icon}`}
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="1.5"
                                                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                                />
                                            </svg>
                                        </div>
                                        <span
                                            class={`text-[10px] font-black tracking-widest px-2 py-0.5 rounded border ${doc.color.badge}`}
                                        >
                                            {doc.typeExt}
                                        </span>
                                    </div>

                                    {/* Card body */}
                                    <div class="px-4 sm:px-5 pb-4 flex flex-col flex-1">
                                        {doc.category && (
                                            <span
                                                class={`w-fit text-[10px] font-bold uppercase tracking-wider px-2 py-0.5 rounded-full border mb-2 ${doc.color.badge}`}
                                            >
                                                {doc.category}
                                            </span>
                                        )}

                                        <h4 class="text-sm sm:text-base font-bold text-gray-900 line-clamp-2 leading-snug mb-1 group-hover:text-blue-600 transition-colors">
                                            {doc.title}
                                        </h4>

                                        {doc.description && (
                                            <p class="text-xs text-gray-500 line-clamp-2 mb-3 flex-1">
                                                {doc.description}
                                            </p>
                                        )}

                                        <p class="mt-auto text-[11px] text-gray-400 flex items-center gap-1 mb-3">
                                            <svg
                                                class="w-3 h-3 flex-shrink-0"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                                                />
                                            </svg>
                                            {doc.dateLabel}
                                        </p>

                                        {/* Action buttons */}
                                        <div class="flex gap-2">
                                            <button
                                                data-preview-url={doc.file}
                                                class="home-doc-preview-btn flex-shrink-0 inline-flex items-center justify-center gap-1 px-3 py-2 rounded-xl border border-gray-200 bg-white hover:bg-gray-50 text-gray-600 hover:text-blue-600 text-xs font-semibold transition-colors duration-200"
                                                title="Preview"
                                            >
                                                <svg
                                                    class="w-3.5 h-3.5"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                                    />
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                                    />
                                                </svg>
                                                <span class="hidden sm:inline">
                                                    Preview
                                                </span>
                                            </button>
                                            <a
                                                href={doc.downloadUrl}
                                                download
                                                class="flex-1 inline-flex items-center justify-center gap-1.5 px-3 py-2 rounded-xl bg-gray-900 hover:bg-blue-600 text-white text-xs font-bold transition-colors duration-200 shadow-sm"
                                            >
                                                <svg
                                                    class="w-3.5 h-3.5"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                                                    />
                                                </svg>
                                                Download
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    )
                }

                <!-- Resources Row -->
                <div class="mt-16">
                    <div
                        class="flex flex-row justify-between items-center md:items-end mb-6 sm:mb-8"
                    >
                        <h3
                            class="text-xl sm:text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-1 sm:pb-2 inline-block mb-0"
                        >
                            Resources
                        </h3>
                        <a
                            href="/resources"
                            class="text-sm sm:text-base text-blue-600 hover:text-blue-800 font-medium whitespace-nowrap"
                            >View all resources &rarr;</a
                        >
                    </div>

                    {
                        /* Horizontal scrollable container for the 'carousel' effect on smaller screens */
                    }
                    <div
                        class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-8"
                    >
                        {
                            recentResources.map((resource) => (
                                <div class="w-full">
                                    <div class="bg-surface-card rounded-lg shadow-sm border border-border-base overflow-hidden flex flex-col hover:shadow-md transition-shadow h-full paginated-item">
                                        <div class="h-24 sm:h-32 lg:h-40 overflow-hidden bg-surface-muted flex-shrink-0">
                                            {resource.data.heroImage ? (
                                                <img
                                                    src={
                                                        resource.data.heroImage
                                                    }
                                                    alt={resource.data.title}
                                                    class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                                                />
                                            ) : (
                                                <div class="w-full h-full flex items-center justify-center text-gray-400 bg-gray-100">
                                                    <svg
                                                        class="w-12 h-12"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        viewBox="0 0 24 24"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="1.5"
                                                            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                                                        />
                                                    </svg>
                                                </div>
                                            )}
                                        </div>
                                        <div class="p-3 sm:p-5 flex flex-col flex-1">
                                            <p class="text-xs font-medium text-primary mb-1">
                                                {resource.data.category}
                                            </p>
                                            <h4 class="text-sm sm:text-lg font-bold text-text-main mb-3 sm:mb-4 line-clamp-2 leading-tight min-h-[2.5em]">
                                                {resource.data.title}
                                            </h4>
