<script>
    document.addEventListener("DOMContentLoaded", () => {
        const modal = document.getElementById("home-doc-modal");
        const backdrop = document.getElementById("home-doc-modal-backdrop");
        const closeBtn = document.getElementById("home-doc-modal-close");
        const iframe = document.getElementById(
            "home-doc-modal-iframe",
        ) as HTMLIFrameElement;
        const newTab = document.getElementById(
            "home-doc-modal-newtab",
        ) as HTMLAnchorElement;
        const loader = document.getElementById("home-doc-modal-loader");

        const openModal = (url: string) => {
            if (!modal || !iframe || !newTab || !loader) return;
            iframe.src = url;
            newTab.href = url;
            loader.style.display = "flex";
            modal.classList.remove("hidden");
            document.body.style.overflow = "hidden";
            iframe.onload = () => {
                loader.style.display = "none";
            };
        };

        const closeModal = () => {
            if (!modal || !iframe) return;
            modal.classList.add("hidden");
            document.body.style.overflow = "";
            iframe.src = "";
        };

        document.querySelectorAll(".home-doc-preview-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
                const url = btn.getAttribute("data-preview-url");
                if (url) openModal(url);
            });
        });

        closeBtn?.addEventListener("click", closeModal);
        backdrop?.addEventListener("click", closeModal);
        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape" && !modal?.classList.contains("hidden"))
                closeModal();
        });
    });
</script>
