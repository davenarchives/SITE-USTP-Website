---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import SDGCard from "../components/SDGCard.astro";
import ResourceGrid from "../components/ResourceGrid.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

// Fetch and prepare data
const events = await getCollection("events");
events.sort(
    (a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
);
const upcomingEvents = events.slice(0, 4);

const posts = await getCollection("news");
posts.sort(
    (a, b) =>
        new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf(),
);
const recentNews = posts.slice(0, 4);

// Fetch resources
const allResources = await getCollection("resources");
const recentResources = allResources.slice(0, 4);

const formatDateNumber = (date: Date | string) => {
    return new Date(date).getDate().toString();
};

const formatMonthName = (date: Date | string) => {
    return new Date(date).toLocaleString("default", { month: "short" });
};
---

<MainLayout>
    <Hero />

    <!-- SDGs Section -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-left mb-12">
                <h2 class="text-2xl md:text-3xl font-bold text-gray-900">
                    Our Commitment to UN Sustainable Development Goals
                </h2>
            </div>

            <div
                class="grid grid-cols-5 gap-1 sm:gap-2 md:grid-cols-3 lg:grid-cols-5 md:gap-8 justify-items-center"
            >
                <SDGCard
                    sdgNumber={12}
                    title="Responsible Consumption and Production"
                    description="Ensuring sustainable consumption and production patterns."
                    colorClass="bg-[#bf8b2e]"
                />
                <SDGCard
                    sdgNumber={9}
                    title="Industry, Innovation and Infrastructure"
                    description="Building resilient infrastructure, promoting inclusive and sustainable industrialization."
                    colorClass="bg-[#fd6925]"
                />
                <SDGCard
                    sdgNumber={10}
                    title="Reduced Inequalities"
                    description="Reducing inequality within and among countries."
                    colorClass="bg-[#dd1367]"
                />
                <SDGCard
                    sdgNumber={4}
                    title="Quality Education"
                    description="Ensuring inclusive and equitable quality education and promoting lifelong learning opportunities for all."
                    colorClass="bg-[#c5192d]"
                />
                <SDGCard
                    sdgNumber={8}
                    title="Decent Work and Economic Growth"
                    description="Promoting sustained, inclusive and sustainable economic growth, full and productive employment."
                    colorClass="bg-[#a21942]"
                />
            </div>
        </div>
    </section>

    <!-- Content Feeds Section -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Upcoming Events Row -->
            <div class="mb-16">
                <div
                    class="flex flex-row justify-between items-center md:items-end mb-6 sm:mb-8"
                >
                    <h3
                        class="text-xl sm:text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-1 sm:pb-2 inline-block mb-0"
                    >
                        Events
                    </h3>
                    <a
                        href="/events"
                        class="text-sm sm:text-base text-blue-600 hover:text-blue-800 font-medium whitespace-nowrap"
                        >View all events &rarr;</a
                    >
                </div>

                <div
                    class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-8"
                >
                    {
                        upcomingEvents.map((event, index) => (
                            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden flex flex-col hover:shadow-md transition-shadow h-full">
                                <div
                                    class={`w-full h-24 sm:h-32 flex items-center justify-center p-3 sm:p-4 text-white shrink-0 ${index % 2 === 0 ? "bg-blue-600" : "bg-gray-800"}`}
                                >
                                    <div class="text-center">
                                        {event.data.endDate &&
                                        new Date(
                                            event.data.date,
                                        ).toDateString() !==
                                            new Date(
                                                event.data.endDate,
                                            ).toDateString() ? (
                                            <div class="flex flex-col items-center">
                                                <div class="flex items-center gap-1.5 sm:gap-2 mb-0.5">
                                                    <span class="text-2xl sm:text-3xl font-bold">
                                                        {formatDateNumber(
                                                            event.data.date,
                                                        )}
                                                    </span>
                                                    <span class="text-base sm:text-xl font-light opacity-60">
                                                        &ndash;
                                                    </span>
                                                    <span class="text-2xl sm:text-3xl font-bold">
                                                        {formatDateNumber(
                                                            event.data.endDate,
                                                        )}
                                                    </span>
                                                </div>
                                                <span class="text-sm sm:text-lg uppercase tracking-wider font-medium opacity-90 text-center">
                                                    <span class="block sm:inline whitespace-nowrap">
                                                        {formatMonthName(
                                                            event.data.date,
                                                        )}
                                                        {new Date(
                                                            event.data.date,
                                                        ).getMonth() !==
                                                            new Date(
                                                                event.data
                                                                    .endDate,
                                                            ).getMonth() &&
                                                            ` - ${formatMonthName(event.data.endDate)}`}
                                                    </span>
                                                </span>
                                            </div>
                                        ) : (
                                            <>
                                                <span class="block text-3xl font-bold leading-none mb-1 sm:mb-0">
                                                    {formatDateNumber(
                                                        event.data.date,
                                                    )}
                                                </span>
                                                <span class="block text-sm sm:text-lg uppercase tracking-wide">
                                                    {formatMonthName(
                                                        event.data.date,
                                                    )}
                                                </span>
                                            </>
                                        )}
                                    </div>
                                </div>
                                <div class="p-3 sm:p-5 flex flex-col flex-1">
                                    <h4 class="h-10 sm:h-14 text-sm sm:text-lg font-bold text-gray-900 mb-1 sm:mb-2 line-clamp-2 leading-tight">
                                        <a
                                            href={`/events/${event.id}/`}
                                            class="hover:text-blue-600 transition-colors"
                                        >
                                            {event.data.title}
                                        </a>
                                    </h4>
                                    <div class="hidden sm:flex flex-col gap-1.5 text-xs text-gray-500 mb-4 w-full">
                                        <div class="flex items-start">
                                            <svg
                                                class="h-3.5 w-3.5 mr-1.5 shrink-0 mt-0.5"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            <span class="leading-snug break-words">
                                                {event.data.time || "Time TBA"}
                                            </span>
                                        </div>
                                        <div class="flex items-start">
                                            <svg
                                                class="h-3.5 w-3.5 mr-1.5 shrink-0 mt-0.5"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            <span class="leading-snug break-words line-clamp-2">
                                                {event.data.location}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="mt-auto pt-2">
                                        <a
                                            href={`/events/${event.id}/`}
                                            class="text-xs sm:text-sm text-blue-600 font-semibold hover:underline"
                                        >
                                            More info &rarr;
                                        </a>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- News / Blog Row -->
            <div>
                <div
                    class="flex flex-row justify-between items-center md:items-end mb-6 sm:mb-8"
                >
                    <h3
                        class="text-xl sm:text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-1 sm:pb-2 inline-block mb-0"
                    >
                        News
                    </h3>
                    <a
                        href="/news"
                        class="text-sm sm:text-base text-blue-600 hover:text-blue-800 font-medium whitespace-nowrap"
                        >View all news &rarr;</a
                    >
                </div>

                <div
                    class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-8"
                >
                    {
                        recentNews.map((post) => (
                            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden flex flex-col hover:shadow-md transition-shadow h-full">
                                <div class="h-24 sm:h-48 overflow-hidden bg-gray-100 flex-shrink-0">
                                    {post.data.heroImage ? (
                                        <img
                                            src={post.data.heroImage}
                                            alt={post.data.title}
                                            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center text-gray-400">
                                            <svg
                                                class="w-12 h-12"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="1.5"
                                                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                                                />
                                            </svg>
                                        </div>
                                    )}
                                </div>
                                <div class="p-3 sm:p-5 flex flex-col flex-1">
                                    <p class="text-xs font-medium text-blue-600 mb-1">
                                        {post.data.tags && post.data.tags[0]
                                            ? post.data.tags[0]
                                            : "News"}
                                    </p>
                                    <h4 class="text-sm sm:text-lg font-bold text-gray-900 mb-1 sm:mb-2 line-clamp-2 leading-tight">
                                        {post.data.title}
                                    </h4>
                                    <p class="line-clamp-3 text-xs sm:text-sm text-gray-600 mb-2 sm:mb-4 flex-grow-0">
                                        {post.data.description}
                                    </p>
                                    <div class="mt-auto">
                                        <a
                                            href={`/news/${post.id}`}
                                            class="text-xs sm:text-sm text-blue-600 font-semibold hover:underline"
                                        >
                                            Read article &rarr;
                                        </a>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Resources Row -->
            <div class="mt-16">
                <div
                    class="flex flex-row justify-between items-center md:items-end mb-6 sm:mb-8"
                >
                    <h3
                        class="text-xl sm:text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-1 sm:pb-2 inline-block mb-0"
                    >
                        Resources
                    </h3>
                    <a
                        href="/resources"
                        class="text-sm sm:text-base text-blue-600 hover:text-blue-800 font-medium whitespace-nowrap"
                        >View all resources &rarr;</a
                    >
                </div>

                {
                    /* Horizontal scrollable container for the 'carousel' effect on smaller screens */
                }
                <div
                    class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-8"
                >
                    {
                        recentResources.map((resource) => (
                            <div class="w-full">
                                <div class="bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition-shadow p-3 sm:p-6 flex flex-col h-full">
                                    <div class="flex items-center justify-between mb-4">
                                        <span
                                            class={`px-2 py-1 text-xs font-semibold rounded-full 
                                            ${
                                                resource.data.category ===
                                                "Academic"
                                                    ? "bg-blue-100 text-blue-800"
                                                    : resource.data.category ===
                                                        "Software"
                                                      ? "bg-green-100 text-green-800"
                                                      : "bg-gray-100 text-gray-800"
                                            }`}
                                        >
                                            {resource.data.category}
                                        </span>
                                    </div>

                                    <h3
                                        class="text-sm sm:text-lg font-medium text-gray-900 mb-1 sm:mb-2 line-clamp-2 md:truncate"
                                        title={resource.data.title}
                                    >
                                        {resource.data.title}
                                    </h3>

                                    <p class="line-clamp-3 text-xs sm:text-sm text-gray-500 mb-2 sm:mb-4 flex-grow-0">
                                        {resource.data.description}
                                    </p>

                                    <a
                                        href={resource.data.link}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="mt-auto inline-flex items-center justify-center px-1 sm:px-4 py-2 border border-transparent text-xs sm:text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors w-full"
                                    >
                                        <span class="sm:hidden">Download</span>
                                        <span class="hidden sm:inline">
                                            Download / View
                                        </span>
                                    </a>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>

    <style>
        .hide-scrollbars::-webkit-scrollbar {
            display: none;
        }
        .hide-scrollbars {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
    </style>
</MainLayout>
