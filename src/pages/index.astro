---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import SDGCard from "../components/SDGCard.astro";
import ResourceGrid from "../components/ResourceGrid.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

// Fetch and prepare data
const events = await getCollection("events");
events.sort(
    (a, b) => new Date(a.data.date).valueOf() - new Date(b.data.date).valueOf(),
);
const upcomingEvents = events.slice(0, 3);

const posts = await getCollection("news");
posts.sort(
    (a, b) =>
        new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf(),
);
const recentNews = posts.slice(0, 3);

// Fetch resources
const allResources = await getCollection("resources");
const recentResources = allResources.slice(0, 3);

const formatDateNumber = (date: Date | string) => {
    return new Date(date).getDate().toString();
};

const formatMonthName = (date: Date | string) => {
    return new Date(date).toLocaleString("default", { month: "short" });
};
---

<MainLayout>
    <Hero />

    <!-- SDGs Section -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-left mb-12">
                <h2 class="text-2xl md:text-3xl font-bold text-gray-900">
                    Our Commitment to UN Sustainable Development Goals
                </h2>
            </div>

            <div
                class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 justify-items-center"
            >
                <SDGCard
                    sdgNumber={12}
                    title="Responsible Consumption and Production"
                    description="Ensuring sustainable consumption and production patterns."
                    colorClass="bg-[#bf8b2e]"
                />
                <SDGCard
                    sdgNumber={9}
                    title="Industry, Innovation and Infrastructure"
                    description="Building resilient infrastructure, promoting inclusive and sustainable industrialization."
                    colorClass="bg-[#fd6925]"
                />
                <SDGCard
                    sdgNumber={10}
                    title="Reduced Inequalities"
                    description="Reducing inequality within and among countries."
                    colorClass="bg-[#dd1367]"
                />
                <SDGCard
                    sdgNumber={4}
                    title="Quality Education"
                    description="Ensuring inclusive and equitable quality education and promoting lifelong learning opportunities for all."
                    colorClass="bg-[#c5192d]"
                />
                <SDGCard
                    sdgNumber={8}
                    title="Decent Work and Economic Growth"
                    description="Promoting sustained, inclusive and sustainable economic growth, full and productive employment."
                    colorClass="bg-[#a21942]"
                />
            </div>
        </div>
    </section>

    <!-- Content Feeds Section -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Upcoming Events Row -->
            <div class="mb-16">
                <div class="flex justify-between items-end mb-8">
                    <h3
                        class="text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-2 inline-block"
                    >
                        Events
                    </h3>
                    <a
                        href="/events"
                        class="text-blue-600 hover:text-blue-800 font-medium"
                        >View all events &rarr;</a
                    >
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {
                        upcomingEvents.map((event, index) => (
                            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden flex flex-col hover:shadow-md transition-shadow h-full">
                                <div
                                    class={`w-full flex items-center justify-center p-6 text-white ${index % 2 === 0 ? "bg-red-600" : "bg-gray-800"}`}
                                >
                                    <div class="text-center">
                                        <span class="block text-3xl font-bold">
                                            {formatDateNumber(event.data.date)}
                                        </span>
                                        <span class="block text-lg uppercase tracking-wide">
                                            {formatMonthName(event.data.date)}
                                        </span>
                                    </div>
                                </div>
                                <div class="p-5 flex flex-col flex-1">
                                    <h4 class="text-lg font-bold text-gray-900 mb-2 line-clamp-2">
                                        {event.data.title}
                                    </h4>
                                    <div class="flex items-center text-xs text-gray-500 mb-4 flex-1">
                                        <svg
                                            class="h-3 w-3 mr-1"
                                            fill="currentColor"
                                            viewBox="0 0 20 20"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                                clip-rule="evenodd"
                                            />
                                        </svg>
                                        <span class="truncate">
                                            {event.data.location}
                                        </span>
                                    </div>
                                    <div class="mt-auto">
                                        <a
                                            href="/events"
                                            class="text-sm text-blue-600 font-semibold hover:underline"
                                        >
                                            More info &rarr;
                                        </a>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- News / Blog Row -->
            <div>
                <div class="flex justify-between items-end mb-8">
                    <h3
                        class="text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-2 inline-block"
                    >
                        News
                    </h3>
                    <a
                        href="/news"
                        class="text-blue-600 hover:text-blue-800 font-medium"
                        >View all news &rarr;</a
                    >
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {
                        recentNews.map((post) => (
                            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden flex flex-col hover:shadow-md transition-shadow h-full">
                                <div class="h-48 overflow-hidden bg-gray-100 flex-shrink-0">
                                    {post.data.heroImage ? (
                                        <img
                                            src={post.data.heroImage}
                                            alt={post.data.title}
                                            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center text-gray-400">
                                            <svg
                                                class="w-12 h-12"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="1.5"
                                                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                                                />
                                            </svg>
                                        </div>
                                    )}
                                </div>
                                <div class="p-5 flex flex-col flex-1">
                                    <p class="text-xs font-medium text-blue-600 mb-1">
                                        {post.data.tags && post.data.tags[0]
                                            ? post.data.tags[0]
                                            : "News"}
                                    </p>
                                    <h4 class="text-lg font-bold text-gray-900 mb-2 line-clamp-2">
                                        {post.data.title}
                                    </h4>
                                    <p class="text-sm text-gray-600 mb-4 flex-1 line-clamp-3">
                                        {post.data.description}
                                    </p>
                                    <div class="mt-auto">
                                        <a
                                            href={`/news/${post.slug}`}
                                            class="text-sm text-blue-600 font-semibold hover:underline"
                                        >
                                            Read article &rarr;
                                        </a>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Resources Row -->
            <div class="mt-16">
                <div class="flex justify-between items-end mb-8">
                    <h3
                        class="text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-2 inline-block"
                    >
                        Resources
                    </h3>
                    <a
                        href="/resources"
                        class="text-blue-600 hover:text-blue-800 font-medium"
                        >View all resources &rarr;</a
                    >
                </div>

                {
                    /* Horizontal scrollable container for the 'carousel' effect on smaller screens */
                }
                <div
                    class="flex overflow-x-auto pb-4 gap-6 snap-x snap-mandatory hide-scrollbars md:grid md:grid-cols-3 md:overflow-visible md:-mx-0 -mx-4 px-4 md:px-0"
                >
                    {
                        recentResources.map((resource) => (
                            <div class="flex-none w-full sm:w-[calc(50%-12px)] md:w-auto snap-center">
                                <div class="bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition-shadow p-6 flex flex-col h-full">
                                    <div class="flex items-center justify-between mb-4">
                                        <span
                                            class={`px-2 py-1 text-xs font-semibold rounded-full 
                                            ${
                                                resource.data.category ===
                                                "Academic"
                                                    ? "bg-blue-100 text-blue-800"
                                                    : resource.data.category ===
                                                        "Software"
                                                      ? "bg-green-100 text-green-800"
                                                      : "bg-gray-100 text-gray-800"
                                            }`}
                                        >
                                            {resource.data.category}
                                        </span>
                                    </div>

                                    <h3
                                        class="text-lg font-medium text-gray-900 mb-2 truncate"
                                        title={resource.data.title}
                                    >
                                        {resource.data.title}
                                    </h3>

                                    <p class="text-sm text-gray-500 mb-4 flex-grow line-clamp-3">
                                        {resource.data.description}
                                    </p>

                                    <a
                                        href={resource.data.link}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="mt-auto inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors w-full"
                                    >
                                        Download / View
                                    </a>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>

    <style>
        .hide-scrollbars::-webkit-scrollbar {
            display: none;
        }
        .hide-scrollbars {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
    </style>
</MainLayout>
