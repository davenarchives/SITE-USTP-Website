---
import { type CollectionEntry, getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import { render } from "astro:content";

export const prerender = true;

export async function getStaticPaths() {
    const posts = await getCollection("news");
    return posts.map((post) => ({
        params: { slug: post.id },
        props: post,
    }));
}
type Props = CollectionEntry<"news">;

const post = Astro.props;
const { Content } = await render(post);
---

<MainLayout
    title={post.data.title}
    description={post.data.description}
    image={post.data.heroImage}
>
    <article class="bg-white pb-16">
        <!-- Main Container -->
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-10">
            <!-- Breadcrumbs / Top Label -->
            <div
                class="flex flex-wrap items-center gap-2 text-xs sm:text-sm text-gray-500 mb-6 font-medium uppercase tracking-wider"
            >
                <a href="/" class="hover:text-blue-600 transition-colors"
                    >Home</a
                >
                <span>&rsaquo;</span>
                <a href="/news" class="hover:text-blue-600 transition-colors"
                    >News</a
                >
                <span>&rsaquo;</span>
                <span class="text-gray-900 truncate" title={post.data.title}>
                    {post.data.title}
                </span>
            </div>

            <!-- Headline -->
            <h1
                class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-[#111827] leading-tight mb-4 sm:mb-6 tracking-tight break-words"
            >
                {post.data.title}
            </h1>

            <!-- Description -->
            {
                post.data.description && (
                    <p class="text-lg sm:text-xl text-gray-500 mb-6 sm:mb-8 leading-relaxed">
                        {post.data.description}
                    </p>
                )
            }

            <!-- Author and Date Row -->
            <div
                class="flex flex-col sm:flex-row sm:items-center justify-between border-y border-gray-200 py-4 mb-8"
            >
                <div class="flex items-center gap-3 mb-4 sm:mb-0">
                    <div
                        class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-800 font-bold text-lg"
                    >
                        {post.data.author ? post.data.author.charAt(0) : "S"}
                    </div>
                    <div>
                        <p class="text-sm font-semibold text-gray-900">
                            By {post.data.author || "SITE Officer"}
                        </p>
                        <p class="text-xs text-gray-500">
                            Posted at <FormattedDate date={post.data.pubDate} />
                            {
                                post.data.updatedDate && (
                                    <span>
                                        {" "}
                                        &middot; Updated{" "}
                                        <FormattedDate
                                            date={post.data.updatedDate}
                                        />
                                    </span>
                                )
                            }
                        </p>
                    </div>
                </div>

                <!-- Share Buttons dummy -->
                <div class="flex items-center gap-2">
                    <button
                        class="w-8 h-8 rounded-full bg-gray-100 hover:bg-[#1877F2] hover:text-white text-gray-600 transition flex items-center justify-center"
                        aria-label="Share to Facebook"
                        onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(window.location.href), 'facebook-share-dialog', 'width=800,height=600'); return false;"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                            ></path></svg
                        >
                    </button>
                    <button
                        class="w-8 h-8 rounded-full bg-gray-100 hover:bg-black hover:text-white text-gray-600 transition flex items-center justify-center"
                        aria-label="Share to X"
                        onclick="window.open('https://twitter.com/intent/tweet?url=' + encodeURIComponent(window.location.href) + '&text=' + encodeURIComponent(document.title), 'twitter-share-dialog', 'width=800,height=600'); return false;"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 22.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.008 3.827H5.045z"
                            ></path></svg
                        >
                    </button>
                    <button
                        class="w-8 h-8 rounded-full bg-gray-100 hover:bg-[#0A66C2] hover:text-white text-gray-600 transition flex items-center justify-center"
                        aria-label="Share to LinkedIn"
                        onclick="window.open('https://www.linkedin.com/shareArticle?mini=true&url=' + encodeURIComponent(window.location.href) + '&title=' + encodeURIComponent(document.title), 'linkedin-share-dialog', 'width=800,height=600'); return false;"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                            ></path></svg
                        >
                    </button>
                    <button
                        class="w-8 h-8 rounded-full bg-gray-100 hover:bg-gray-200 text-gray-600 transition flex items-center justify-center p-1.5"
                        aria-label="Copy Link"
                        onclick="navigator.clipboard.writeText(window.location.href); alert('Link copied!');"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            stroke-width="2"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                            ></path></svg
                        >
                    </button>
                </div>
            </div>

            <!-- Hero Image -->
            {
                post.data.heroImage && (
                    <figure class="mb-10 text-center">
                        <img
                            class="w-full h-auto bg-gray-200 object-cover"
                            src={post.data.heroImage}
                            alt={post.data.title}
                        />
                        {post.data.photoDescription && (
                            <figcaption class="mt-3 text-sm text-gray-500 italic">
                                {post.data.photoDescription}
                            </figcaption>
                        )}
                    </figure>
                )
            }

            <!-- Article Content -->
            <div
                class="prose sm:prose-lg prose-blue mx-auto sm:mx-0 max-w-none prose-img:rounded-md prose-headings:font-bold prose-a:text-blue-600 break-words"
            >
                <Content />
            </div>

            <!-- Bottom Share OR Tags -->
            <div class="mt-12 pt-8 border-t border-gray-200">
                <div class="flex items-center gap-4">
                    <span class="text-sm font-semibold text-gray-700"
                        >Tags:</span
                    >
                    <div class="flex flex-wrap gap-2">
                        {
                            post.data.tags &&
                                post.data.tags.map((tag) => (
                                    <span class="px-3 py-1 bg-gray-100 text-gray-600 text-xs font-medium uppercase tracking-wider rounded border border-gray-200">
                                        {tag}
                                    </span>
                                ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </article>
</MainLayout>
