---
import { type CollectionEntry, getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import { render } from "astro:content";

export const prerender = true;

export async function getStaticPaths() {
    const posts = await getCollection("news");
    return posts.map((post) => ({
        params: { slug: post.id },
        props: post,
    }));
}
type Props = CollectionEntry<"news">;

const post = Astro.props;
const { Content } = await render(post);
---

<MainLayout
    title={post.data.title}
    description={post.data.description}
    image={post.data.heroImage}
>
    <article class="bg-white pb-16">
        <!-- Main Container -->
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-10">
            <!-- Breadcrumbs / Top Label -->
            <div
                class="flex flex-wrap items-center gap-2 text-xs sm:text-sm text-gray-500 mb-6 font-medium uppercase tracking-wider"
            >
                <a href="/" class="hover:text-blue-600 transition-colors"
                    >Home</a
                >
                <span>&rsaquo;</span>
                <a href="/news" class="hover:text-blue-600 transition-colors"
                    >News</a
                >
                {
                    post.data.tags && post.data.tags.length > 0 && (
                        <>
                            <span>&rsaquo;</span>
                            <span class="text-blue-600">
                                {post.data.tags[0]}
                            </span>
                        </>
                    )
                }
            </div>

            <!-- Headline -->
            <h1
                class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-[#111827] leading-tight mb-4 sm:mb-6 tracking-tight break-words"
            >
                {post.data.title}
            </h1>

            <!-- Description -->
            {
                post.data.description && (
                    <p class="text-lg sm:text-xl text-gray-500 mb-6 sm:mb-8 leading-relaxed">
                        {post.data.description}
                    </p>
                )
            }

            <!-- Author and Date Row -->
            <div
                class="flex flex-col sm:flex-row sm:items-center justify-between border-y border-gray-200 py-4 mb-8"
            >
                <div class="flex items-center gap-3 mb-4 sm:mb-0">
                    <div
                        class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-800 font-bold text-lg"
                    >
                        {post.data.author ? post.data.author.charAt(0) : "S"}
                    </div>
                    <div>
                        <p class="text-sm font-semibold text-gray-900">
                            By {post.data.author || "SITE Officer"}
                        </p>
                        <p class="text-xs text-gray-500">
                            Posted at <FormattedDate date={post.data.pubDate} />
                            {
                                post.data.updatedDate && (
                                    <span>
                                        {" "}
                                        &middot; Updated{" "}
                                        <FormattedDate
                                            date={post.data.updatedDate}
                                        />
                                    </span>
                                )
                            }
                        </p>
                    </div>
                </div>

                <!-- Share Buttons dummy -->
                <div class="flex items-center gap-2">
                    <button
                        class="w-8 h-8 rounded-full bg-gray-100 hover:bg-[#1877F2] hover:text-white text-gray-600 transition flex items-center justify-center"
                        aria-label="Share to Facebook"
                        onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(window.location.href), 'facebook-share-dialog', 'width=800,height=600'); return false;"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                            ></path></svg
                        >
                    </button>
                    <button
                        class="w-8 h-8 rounded-full bg-gray-100 hover:bg-[#1DA1F2] hover:text-white text-gray-600 transition flex items-center justify-center"
                        aria-label="Share to Twitter"
                        onclick="window.open('https://twitter.com/intent/tweet?url=' + encodeURIComponent(window.location.href) + '&text=' + encodeURIComponent(document.title), 'twitter-share-dialog', 'width=800,height=600'); return false;"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                            ></path></svg
                        >
                    </button>
                    <button
                        class="w-8 h-8 rounded-full bg-gray-100 hover:bg-gray-200 text-gray-600 transition flex items-center justify-center p-1.5"
                        aria-label="Copy Link"
                        onclick="navigator.clipboard.writeText(window.location.href); alert('Link copied!');"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            stroke-width="2"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                            ></path></svg
                        >
                    </button>
                </div>
            </div>

            <!-- Hero Image -->
            {
                post.data.heroImage && (
                    <figure class="mb-10">
                        <img
                            class="w-full h-auto bg-gray-200 object-cover"
                            src={post.data.heroImage}
                            alt={post.data.title}
                        />
                    </figure>
                )
            }

            <!-- Article Content -->
            <div
                class="prose sm:prose-lg prose-blue mx-auto sm:mx-0 max-w-none prose-img:rounded-md prose-headings:font-bold prose-a:text-blue-600 break-words"
            >
                <Content />
            </div>

            <!-- Bottom Share OR Tags -->
            <div class="mt-12 pt-8 border-t border-gray-200">
                <div class="flex items-center gap-4">
                    <span class="text-sm font-semibold text-gray-700"
                        >Tags:</span
                    >
                    <div class="flex flex-wrap gap-2">
                        {
                            post.data.tags &&
                                post.data.tags.map((tag) => (
                                    <span class="px-3 py-1 bg-gray-100 text-gray-600 text-xs font-medium uppercase tracking-wider rounded border border-gray-200">
                                        {tag}
                                    </span>
                                ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </article>
</MainLayout>
