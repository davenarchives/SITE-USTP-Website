---
import MainLayout from "../../layouts/MainLayout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("news")).sort(
    (a, b) =>
        new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf(),
);
---

<MainLayout title="News | SITE">
    <div class="bg-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                    SITE News
                </h1>
                <p class="mt-4 text-xl text-gray-500">
                    Latest updates, announcements, and stories from the SITE
                    community.
                </p>
            </div>

            <div
                class="grid grid-cols-2 gap-3 sm:gap-8 sm:grid-cols-2 lg:grid-cols-3 lg:gap-x-5 lg:gap-y-12"
            >
                {
                    posts.map((post) => (
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden flex flex-col hover:shadow-md transition-shadow h-full">
                            <div class="h-24 sm:h-48 overflow-hidden bg-gray-100 flex-shrink-0">
                                {post.data.heroImage ? (
                                    <img
                                        src={post.data.heroImage}
                                        alt={post.data.title}
                                        class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                                        <svg
                                            class="w-12 h-12"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="1.5"
                                                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                                            />
                                        </svg>
                                    </div>
                                )}
                            </div>
                            <div class="p-3 sm:p-5 flex flex-col flex-1">
                                <p class="text-xs font-medium text-blue-600 mb-1">
                                    {post.data.tags && post.data.tags[0]
                                        ? post.data.tags[0]
                                        : "News"}
                                </p>
                                <h4 class="text-sm sm:text-lg font-bold text-gray-900 mb-1 sm:mb-2 line-clamp-2 md:leading-tight">
                                    {post.data.title}
                                </h4>
                                <p class="line-clamp-3 text-xs sm:text-sm text-gray-600 mb-2 sm:mb-4 flex-grow-0">
                                    {post.data.description}
                                </p>
                                <div class="mt-auto">
                                    <a
                                        href={`/news/${post.id}/`}
                                        class="text-xs sm:text-sm text-blue-600 font-semibold hover:underline"
                                    >
                                        Read article &rarr;
                                    </a>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</MainLayout>
