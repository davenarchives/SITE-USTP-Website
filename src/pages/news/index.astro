---
import MainLayout from "../../layouts/MainLayout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
    (a, b) =>
        new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf(),
);
---

<MainLayout title="News | SITE">
    <div class="bg-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                    SITE News
                </h1>
                <p class="mt-4 text-xl text-gray-500">
                    Latest updates, announcements, and stories from the SITE
                    community.
                </p>
            </div>

            <div class="grid gap-16 lg:grid-cols-3 lg:gap-x-5 lg:gap-y-12">
                {
                    posts.map((post) => (
                        <div class="flex flex-col rounded-lg shadow-lg overflow-hidden border border-gray-200">
                            <div class="flex-shrink-0">
                                {post.data.heroImage ? (
                                    <img
                                        class="h-48 w-full object-cover"
                                        src={post.data.heroImage}
                                        alt=""
                                    />
                                ) : (
                                    <div class="h-48 w-full bg-gray-200 flex items-center justify-center">
                                        <span class="text-gray-400">
                                            No Image
                                        </span>
                                    </div>
                                )}
                            </div>
                            <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-blue-600">
                                        {post.data.tags && post.data.tags[0]}
                                    </p>
                                    <a
                                        href={`/news/${post.slug}/`}
                                        class="block mt-2"
                                    >
                                        <p class="text-xl font-semibold text-gray-900">
                                            {post.data.title}
                                        </p>
                                        <p class="mt-3 text-base text-gray-500">
                                            {post.data.description}
                                        </p>
                                    </a>
                                </div>
                                <div class="mt-6 flex items-center">
                                    <div class="flex-shrink-0">
                                        <span class="sr-only">
                                            {post.data.author}
                                        </span>
                                        <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center text-xs">
                                            {post.data.author[0]}
                                        </div>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm font-medium text-gray-900">
                                            {post.data.author}
                                        </p>
                                        <div class="flex space-x-1 text-sm text-gray-500">
                                            <FormattedDate
                                                date={post.data.pubDate}
                                            />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</MainLayout>
